  <% @bramki.each do |bramki|%>
    <% if bramki.id_meczu == @mecz.id %>
      <%= bramki.minuta %>' <%= bramki.display_strzelec %> (<%= bramki.display_asystent %>)<br><br>
    <% end %>
  <% end %>

<br><h4><b>Żółte kartki: </b></h4><br>
