    <% if zolta.id_meczu == @mecz.id %>
      <%= zolta.minuta %>' <%= zolta.display_zolta %><br><br>
    <% end %>
  <% end %>

<br><h4><b>Czerwone kartki: </b></h4><br>
  <% @kartkac.each do |czerwona| %>
    <% if czerwona.id_meczu == @mecz.id %>
      <%= czerwona.minuta %>' <%= czerwona.display_czerwona %><br><br>
    <% end %>
  <% end %>
</div>


